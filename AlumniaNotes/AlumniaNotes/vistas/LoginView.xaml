<Window x:Class="AlumniaNotes.vistas.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlumniaNotes.vistas"
        mc:Ignorable="d"
        Title="Alumnia Notes - Login" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.Background>
        <ImageBrush ImageSource="/images/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo con imagen -->
        <Grid Grid.Column="0" Background="#FF1E88E5">
            <!--  <Image Source="/Resources/login_image.png" 
                   Stretch="Uniform" 
                   Margin="20"/> -->
        </Grid>

        <!-- Panel derecho con formulario -->
        <Grid Grid.Column="1" Margin="40">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Bienvenido a Alumnia Notes"
                         FontSize="24"
                         FontWeight="Bold"
                         Margin="0,0,0,20"
                         HorizontalAlignment="Center"/>

                <TextBlock Text="Iniciar Sesión"
                         FontSize="18"
                         Margin="0,0,0,20"
                         HorizontalAlignment="Center"/>

                <TextBox x:Name="txtUsername"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0,0,10"
                        Height="40"
                        Padding="10"/>

                <PasswordBox x:Name="txtPassword"/>

                <Button Content="Iniciar Sesión"
                        Command="{Binding LoginCommand}"
                        Height="40"
                        Background="#FF1E88E5"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,0,10"/>

                <TextBlock Text="{Binding ErrorMessage}"
                         Foreground="Red"
                         TextWrapping="Wrap"
                         HorizontalAlignment="Center"/>

                <ProgressBar IsIndeterminate="True"
                           Height="4"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window> 