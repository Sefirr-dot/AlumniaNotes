<Window x:Class="AlumniaNotes.vistas.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlumniaNotes.vistas"
        mc:Ignorable="d"
        Title="Alumnia Notes" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menú lateral -->
        <Grid Grid.Column="0" Background="#FF1E88E5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <StackPanel Grid.Row="0" Margin="20">
                <TextBlock Text="Alumnia Notes"
                         FontSize="24"
                         FontWeight="Bold"
                         Foreground="White"
                         Margin="0,0,0,10"/>
                
                <TextBlock Text="{Binding CurrentUser.NombreCompleto}"
                         FontSize="16"
                         Foreground="White"
                         Margin="0,0,0,5"/>
                
                <TextBlock Text="{Binding CurrentUser.Rol}"
                         FontSize="14"
                         Foreground="White"/>
            </StackPanel>

            <!-- Menú de navegación -->
            <StackPanel Grid.Row="1" Margin="10">
                <Button Content="Alumnos"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Alumnos"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,5"/>

                <Button Content="Asignaturas"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Asignaturas"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,5"/>

                <Button Content="Calificaciones"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Calificaciones"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,5"/>

                <Button Content="Asistencias"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Asistencias"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,5"/>

                <Button Content="Reportes"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Reportes"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,5"/>
            </StackPanel>

            <!-- Botón de cierre de sesión -->
            <Button Grid.Row="2"
                    Content="Cerrar Sesión"
                    Command="{Binding LogoutCommand}"
                    Style="{StaticResource LogoutButtonStyle}"
                    Margin="10"/>
        </Grid>

        <!-- Área de contenido -->
        <Grid Grid.Column="1">
            <ContentControl Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF1565C0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF0D47A1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window> 