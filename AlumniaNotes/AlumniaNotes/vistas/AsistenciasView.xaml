<UserControl x:Class="AlumniaNotes.vistas.AsistenciasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlumniaNotes.vistas"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1030">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra de herramientas -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,20">
            <ComboBox Width="200" 
                      ItemsSource="{Binding Alumnos}"
                      SelectedItem="{Binding AlumnoFiltro}"
                      DisplayMemberPath="NombreCompleto"
                      
                      Margin="0,0,10,0"/>

            <ComboBox Width="200" 
                      ItemsSource="{Binding Asignaturas}"
                      SelectedItem="{Binding AsignaturaFiltro}"
                      DisplayMemberPath="Nombre"
                      
                      Margin="0,0,10,0"/>

            <DatePicker Width="150" 
                       SelectedDate="{Binding FechaFiltro}"
                       Margin="0,0,10,0"/>
            
            <Button Content="Registrar Asistencia" 
                    Command="{Binding RegistrarAsistenciaCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>

        <!-- Lista de Asistencias -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Lista -->
            <DataGrid ItemsSource="{Binding Asistencias}"
                      SelectedItem="{Binding AsistenciaSeleccionada}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="None"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                      Binding="{Binding Id}" 
                                      Width="Auto"/>
                    <DataGridTextColumn Header="Alumno" 
                                      Binding="{Binding Alumno.NombreCompleto}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Asignatura" 
                                      Binding="{Binding Asignatura.Nombre}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Fecha" 
                                      Binding="{Binding Fecha, StringFormat=d}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Estado" 
                                      Binding="{Binding Estado}" 
                                      Width="*"/>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" 
                                            Command="{Binding DataContext.EditarAsistenciaCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SecondaryButtonStyle}"/>
                                    <Button Content="Eliminar" 
                                            Command="{Binding DataContext.EliminarAsistenciaCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DangerButtonStyle}"
                                            Margin="5,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Formulario de Asistencia -->
            <Border Grid.Column="1" 
                    Width="400" 
                    Margin="20,0,0,0"
                    Background="White"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Padding="20"
                    Visibility="{Binding AsistenciaSeleccionada, Converter={StaticResource ObjectToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Detalles de la Asistencia" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Alumno" 
                             Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Alumnos}"
                             SelectedItem="{Binding AsistenciaSeleccionada.Alumno}"
                             DisplayMemberPath="NombreCompleto"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Asignatura" 
                             Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Asignaturas}"
                             SelectedItem="{Binding AsistenciaSeleccionada.Asignatura}"
                             DisplayMemberPath="Nombre"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Fecha" 
                             Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding AsistenciaSeleccionada.Fecha}"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Estado" 
                             Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding EstadosAsistencia}"
                             SelectedItem="{Binding AsistenciaSeleccionada.Estado}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Comentarios" 
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding AsistenciaSeleccionada.Comentarios, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="100"
                             Margin="0,0,0,20"/>

                    <Button Content="Guardar" 
                            Command="{Binding GuardarAsistenciaCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl> 