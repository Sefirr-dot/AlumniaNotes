<Window x:Class="AlumniaNotes.vistas.AsistenciaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlumniaNotes"
        xmlns:converters="clr-namespace:AlumniaNotes.converters"
        mc:Ignorable="d"
        Title="GestiÃ³n de Asistencias" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ComboBox Width="200" Margin="0,0,10,0" 
                      ItemsSource="{Binding Alumnos}"
                      SelectedItem="{Binding SelectedAlumno}"
                      DisplayMemberPath="NombreCompleto"
                      Tag="Seleccionar alumno..."/>
            <ComboBox Width="200" Margin="0,0,10,0" 
                      ItemsSource="{Binding Asignaturas}"
                      SelectedItem="{Binding SelectedAsignatura}"
                      DisplayMemberPath="Nombre"
                      Tag="Seleccionar asignatura..."/>
            <DatePicker Width="150" Margin="0,0,10,0" 
                       SelectedDate="{Binding FechaInicio}"
                       Tag="Fecha inicio"/>
            <DatePicker Width="150" Margin="0,0,10,0" 
                       SelectedDate="{Binding FechaFin}"
                       Tag="Fecha fin"/>
            <Button Content="Nueva Asistencia" Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding AddAsistenciaCommand}"/>
            <Button Content="Exportar" Style="{StaticResource SecondaryButtonStyle}"
                    Command="{Binding ExportCommand}"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid -->
            <DataGrid ItemsSource="{Binding Asistencias}"
                      SelectedItem="{Binding SelectedAsistencia}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Alumno" Binding="{Binding Alumno.NombreCompleto}" Width="*"/>
                    <DataGridTextColumn Header="Asignatura" Binding="{Binding Asignatura.Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="*"/>
                    <DataGridTextColumn Header="Comentarios" Binding="{Binding Comentarios}" Width="*"/>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding DataContext.EditAsistenciaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="Eliminar" Style="{StaticResource DangerButtonStyle}"
                                            Command="{Binding DataContext.DeleteAsistenciaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Edit Form -->
            <Border Grid.Column="1" Width="300" Margin="10,0,0,0" 
                    Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Editar Asistencia" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="Alumno" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Alumnos}"
                                 SelectedItem="{Binding SelectedAsistencia.Alumno}"
                                 DisplayMemberPath="NombreCompleto"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,10">
                        <TextBlock Text="Asignatura" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Asignaturas}"
                                 SelectedItem="{Binding SelectedAsistencia.Asignatura}"
                                 DisplayMemberPath="Nombre"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Margin="0,0,0,10">
                        <TextBlock Text="Fecha" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding SelectedAsistencia.Fecha}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Margin="0,0,0,10">
                        <TextBlock Text="Estado" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding EstadosAsistencia}"
                                 SelectedItem="{Binding SelectedAsistencia.Estado}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Margin="0,0,0,10">
                        <TextBlock Text="Comentarios" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SelectedAsistencia.Comentarios}" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 Height="60"/>
                    </StackPanel>

                    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Guardar" Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SaveAsistenciaCommand}"/>
                        <Button Content="Cancelar" Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding CancelEditCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" Width="100" Height="100"/>
        </Grid>
    </Grid>
</Window> 