<UserControl x:Class="AlumniaNotes.vistas.AlumnosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlumniaNotes.vistas"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1030">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra de herramientas -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,20">
            <TextBox Width="300" 
                     Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                     
                     Margin="0,0,10,0"/>
            
            <Button Content="Agregar Alumno" 
                    Command="{Binding AgregarAlumnoCommand}"
                    />
        </StackPanel>

        <!-- Lista de Alumnos -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Lista -->
            <DataGrid ItemsSource="{Binding Alumnos}"
                      SelectedItem="{Binding AlumnoSeleccionado}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="None"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                      Binding="{Binding Id}" 
                                      Width="Auto"/>
                    <DataGridTextColumn Header="Nombre" 
                                      Binding="{Binding Nombre}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Apellidos" 
                                      Binding="{Binding Apellidos}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="DNI" 
                                      Binding="{Binding DNI}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Email" 
                                      Binding="{Binding Email}" 
                                      Width="*"/>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" 
                                            Command="{Binding DataContext.EditarAlumnoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            />
                                    <Button Content="Eliminar" 
                                            Command="{Binding DataContext.EliminarAlumnoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            
                                            Margin="5,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Formulario de Alumno -->
            <Border Grid.Column="1" 
                    Width="400" 
                    Margin="20,0,0,0"
                    Background="White"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Padding="20"
                    >
                <StackPanel>
                    <TextBlock Text="Detalles del Alumno" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Nombre" 
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding AlumnoSeleccionado.Nombre, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Apellidos" 
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding AlumnoSeleccionado.Apellidos, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="DNI" 
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding AlumnoSeleccionado.DNI, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Email" 
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding AlumnoSeleccionado.Email, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Teléfono" 
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding AlumnoSeleccionado.Telefono, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Dirección" 
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding AlumnoSeleccionado.Direccion, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,20"/>

                    <Button Content="Guardar" 
                            Command="{Binding GuardarAlumnoCommand}"
                            />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl> 