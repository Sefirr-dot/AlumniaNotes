<Window x:Class="AlumniaNotes.vistas.CalificacionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:AlumniaNotes.converters"
        mc:Ignorable="d"
        Title="Gestión de Calificaciones" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ComboBox Width="200" 
                      ItemsSource="{Binding Alumnos}"
                      SelectedItem="{Binding SelectedAlumno}"
                      DisplayMemberPath="NombreCompleto"
                      Tag="Seleccionar alumno..."/>
            <ComboBox Width="200" 
                      ItemsSource="{Binding Asignaturas}"
                      SelectedItem="{Binding SelectedAsignatura}"
                      DisplayMemberPath="Nombre"
                      Tag="Seleccionar asignatura..."
                      Margin="10,0"/>
            <DatePicker Width="150" 
                        SelectedDate="{Binding FechaInicio}"
                        Tag="Fecha inicio"
                        Margin="10,0"/>
            <DatePicker Width="150" 
                        SelectedDate="{Binding FechaFin}"
                        Tag="Fecha fin"
                        Margin="10,0"/>
            <Button Content="Nuevo" 
                    Command="{Binding AddCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="10,0"/>
            <Button Content="Exportar" 
                    Command="{Binding ExportCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="10,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid -->
            <DataGrid ItemsSource="{Binding Calificaciones}"
                      SelectedItem="{Binding SelectedCalificacion}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="None"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Alumno" Binding="{Binding Alumno.NombreCompleto}" Width="*"/>
                    <DataGridTextColumn Header="Asignatura" Binding="{Binding Asignatura.Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Nota" Binding="{Binding Nota}" Width="Auto"/>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=d}" Width="Auto"/>
                    <DataGridTextColumn Header="Comentarios" Binding="{Binding Comentarios}" Width="*"/>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" 
                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Margin="0,0,5,0"/>
                                    <Button Content="Eliminar" 
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DangerButtonStyle}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Form -->
            <Border Grid.Column="1" 
                    Width="300" 
                    Background="#F5F5F5"
                    Visibility="{Binding SelectedCalificacion, Converter={StaticResource ObjectToVisibilityConverter}}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Detalles de la Calificación" 
                             FontSize="16" 
                             FontWeight="Bold"
                             Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Alumno" Margin="0,5,0,0"/>
                        <ComboBox ItemsSource="{Binding Alumnos}"
                                  SelectedItem="{Binding SelectedCalificacion.Alumno}"
                                  DisplayMemberPath="NombreCompleto"/>

                        <TextBlock Text="Asignatura" Margin="0,5,0,0"/>
                        <ComboBox ItemsSource="{Binding Asignaturas}"
                                  SelectedItem="{Binding SelectedCalificacion.Asignatura}"
                                  DisplayMemberPath="Nombre"/>

                        <TextBlock Text="Nota" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding SelectedCalificacion.Nota, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Fecha" Margin="0,5,0,0"/>
                        <DatePicker SelectedDate="{Binding SelectedCalificacion.Fecha}"/>

                        <TextBlock Text="Comentarios" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding SelectedCalificacion.Comentarios, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="60"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Guardar" 
                                Command="{Binding SaveCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,5,0"/>
                        <Button Content="Cancelar" 
                                Command="{Binding CancelCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Indicator -->
        <Grid Grid.Row="0" Grid.RowSpan="2" 
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" 
                         Width="100" 
                         Height="100"/>
        </Grid>
    </Grid>
</Window> 