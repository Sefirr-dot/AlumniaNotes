<UserControl x:Class="AlumniaNotes.vistas.CalificacionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlumniaNotes.vistas"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1030">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra de herramientas -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,20">
            <ComboBox Width="200" 
                      ItemsSource="{Binding Alumnos}"
                      SelectedItem="{Binding AlumnoFiltro}"
                      DisplayMemberPath="NombreCompleto"
                      
                      Margin="0,0,10,0"/>

            <ComboBox Width="200" 
                      ItemsSource="{Binding Asignaturas}"
                      SelectedItem="{Binding AsignaturaFiltro}"
                      DisplayMemberPath="Nombre"
                      
                      Margin="0,0,10,0"/>
            
            <Button Content="Agregar Calificación" 
                    Command="{Binding AgregarCalificacionCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>

        <!-- Lista de Calificaciones -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Lista -->
            <DataGrid ItemsSource="{Binding Calificaciones}"
                      SelectedItem="{Binding CalificacionSeleccionada}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="None"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                      Binding="{Binding Id}" 
                                      Width="Auto"/>
                    <DataGridTextColumn Header="Alumno" 
                                      Binding="{Binding Alumno.NombreCompleto}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Asignatura" 
                                      Binding="{Binding Asignatura.Nombre}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Nota" 
                                      Binding="{Binding Nota}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Fecha" 
                                      Binding="{Binding Fecha, StringFormat=d}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Tipo" 
                                      Binding="{Binding Tipo}" 
                                      Width="*"/>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" 
                                            Command="{Binding DataContext.EditarCalificacionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SecondaryButtonStyle}"/>
                                    <Button Content="Eliminar" 
                                            Command="{Binding DataContext.EliminarCalificacionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DangerButtonStyle}"
                                            Margin="5,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Formulario de Calificación -->
            <Border Grid.Column="1" 
                    Width="400" 
                    Margin="20,0,0,0"
                    Background="White"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Detalles de la Calificación" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Alumno" 
                             Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Alumnos}"
                             SelectedItem="{Binding CalificacionSeleccionada.Alumno}"
                             DisplayMemberPath="NombreCompleto"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Asignatura" 
                             Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Asignaturas}"
                             SelectedItem="{Binding CalificacionSeleccionada.Asignatura}"
                             DisplayMemberPath="Nombre"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Nota" 
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding CalificacionSeleccionada.Nota, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Fecha" 
                             Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding CalificacionSeleccionada.Fecha}"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Tipo" 
                             Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding TiposCalificacion}"
                             SelectedItem="{Binding CalificacionSeleccionada.Tipo}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Comentarios" 
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding CalificacionSeleccionada.Comentarios, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="100"
                             Margin="0,0,0,20"/>

                    <Button Content="Guardar" 
                            Command="{Binding GuardarCalificacionCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl> 