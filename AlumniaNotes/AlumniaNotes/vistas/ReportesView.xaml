<UserControl x:Class="AlumniaNotes.vistas.ReportesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlumniaNotes.vistas"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1030">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel de Configuración -->
        <Border Grid.Row="0" 
                Background="White"
                BorderBrush="#FFE0E0E0"
                BorderThickness="1"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Configuración del Reporte" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Tipo de Reporte:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1" 
                                ItemsSource="{Binding TiposReporte}"
                                SelectedItem="{Binding TipoReporteSeleccionado}"
                                Margin="0,0,20,0"/>

                        <TextBlock Grid.Column="2" 
                                 Text="Formato:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="3" 
                                ItemsSource="{Binding FormatosReporte}"
                                SelectedItem="{Binding FormatoSeleccionado}"/>
                    </Grid>

                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Alumno:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1" 
                                ItemsSource="{Binding Alumnos}"
                                SelectedItem="{Binding AlumnoSeleccionado}"
                                DisplayMemberPath="NombreCompleto"
                                Margin="0,0,20,0"/>

                        <TextBlock Grid.Column="2" 
                                 Text="Asignatura:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="3" 
                                ItemsSource="{Binding Asignaturas}"
                                SelectedItem="{Binding AsignaturaSeleccionada}"
                                DisplayMemberPath="Nombre"/>
                    </Grid>

                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Fecha Inicio:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <DatePicker Grid.Column="1" 
                                  SelectedDate="{Binding FechaInicio}"
                                  Margin="0,0,20,0"/>

                        <TextBlock Grid.Column="2" 
                                 Text="Fecha Fin:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <DatePicker Grid.Column="3" 
                                  SelectedDate="{Binding FechaFin}"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                           HorizontalAlignment="Right">
                    <Button Content="Generar Reporte" 
                            Command="{Binding GenerarReporteCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,0,10"/>

                    <Button Content="Exportar" 
                            Command="{Binding ExportarReporteCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            IsEnabled="{Binding TieneResultados}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Resultados del Reporte -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#FFE0E0E0"
                BorderThickness="1"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Resultados" 
                         FontSize="18" 
                         FontWeight="Bold" 
                         Margin="0,0,0,20"/>

                <DataGrid Grid.Row="1" 
                         ItemsSource="{Binding ResultadosReporte}"
                         AutoGenerateColumns="True"
                         IsReadOnly="True"
                         GridLinesVisibility="All"
                         AlternatingRowBackground="#FFF5F5F5"/>
            </Grid>
        </Border>
    </Grid>
</UserControl> 