<Window x:Class="AlumniaNotes.vistas.ReporteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlumniaNotes.converters"
        mc:Ignorable="d"
        Title="Generación de Reportes" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <local:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ComboBox Width="200" 
                      ItemsSource="{Binding Alumnos}"
                      SelectedItem="{Binding SelectedAlumno}"
                      DisplayMemberPath="NombreCompleto"
                      />
            <ComboBox Width="200" 
                      ItemsSource="{Binding Asignaturas}"
                      SelectedItem="{Binding SelectedAsignatura}"
                      DisplayMemberPath="Nombre"
                      
                      Margin="10,0"/>
            <ComboBox Width="200" 
                      ItemsSource="{Binding TiposReporte}"
                      SelectedItem="{Binding TipoReporte}"
                      DisplayMemberPath="Nombre"
                      
                      Margin="10,0"/>
            <DatePicker Width="150" 
                        SelectedDate="{Binding FechaInicio}"
                        
                        Margin="10,0"/>
            <DatePicker Width="150" 
                        SelectedDate="{Binding FechaFin}"
                        
                        Margin="10,0"/>
            <Button Content="Generar" 
                    Command="{Binding GenerateCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="10,0"/>
            <Button Content="Exportar" 
                    Command="{Binding ExportCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="10,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Report Content -->
            <Border Grid.Column="0" 
                    Background="White"
                    Margin="10"
                    CornerRadius="5"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Report Header -->
                    <StackPanel Grid.Row="0" 
                               Orientation="Horizontal" 
                               Background="#F5F5F5"
                               >
                        <TextBlock Text="{Binding ReportTitle}" 
                                 FontSize="16" 
                                 FontWeight="Bold"/>
                        <TextBlock Text="{Binding ReportDateRange}" 
                                 Margin="20,0,0,0"/>
                    </StackPanel>

                    <!-- Report Data -->
                    <ScrollViewer Grid.Row="1" 
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                Padding="10">
                        <ItemsControl ItemsSource="{Binding ReportData}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="0,0,0,1" 
                                            BorderBrush="#E0E0E0"
                                            Padding="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Title}" 
                                                     FontWeight="Bold"/>
                                            <TextBlock Grid.Column="1" 
                                                     Text="{Binding Value}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Report Options -->
            <Border Grid.Column="1" 
                    Width="300" 
                    Background="#F5F5F5"
                    Margin="0,10,10,10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Opciones del Reporte" 
                             FontSize="16" 
                             FontWeight="Bold"
                             Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Formato de Exportación" 
                                 Margin="0,5,0,0"/>
                        <ComboBox ItemsSource="{Binding FormatosExportacion}"
                                  SelectedItem="{Binding FormatoExportacion}"
                                  Margin="0,5,0,10"/>

                        <TextBlock Text="Incluir Gráficos" 
                                 Margin="0,5,0,0"/>
                        <CheckBox IsChecked="{Binding IncluirGraficos}"
                                 Margin="0,5,0,10"/>

                        <TextBlock Text="Detalle del Reporte" 
                                 Margin="0,5,0,0"/>
                        <ComboBox ItemsSource="{Binding NivelesDetalle}"
                                  SelectedItem="{Binding NivelDetalle}"
                                  Margin="0,5,0,10"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" 
                               Orientation="Horizontal" 
                               HorizontalAlignment="Right">
                        <Button Content="Aplicar" 
                                Command="{Binding ApplyOptionsCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,5,0"/>
                        <Button Content="Restablecer" 
                                Command="{Binding ResetOptionsCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Indicator -->
        <Grid Grid.Row="0" Grid.RowSpan="2" 
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            
        </Grid>
    </Grid>
</Window> 