<Window x:Class="AlumniaNotes.vistas.LoginPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlumniaNotes.vistas"
        mc:Ignorable="d"
        Icon="/images/logo.ico"
        Title="LoginPrincipal" Height="450" Width="800">
    <Window.Resources>
        <!-- Animación para cambiar el fondo a rojo y luego hacerlo transparente -->
        <Storyboard x:Key="LabelBackgroundAnimation">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" 
                                          Duration="0:0:3">
                <!-- Cambiar el fondo a rojo -->
                <LinearColorKeyFrame Value="Red" KeyTime="0:0:1" />
                <!-- Hacerlo transparente -->
                <LinearColorKeyFrame Value="Transparent" KeyTime="0:0:3" />
            </ColorAnimationUsingKeyFrames>
        </Storyboard>

        <Style x:Key="BotonRedondoLogin" TargetType="Button">
            <Setter Property="Background" Value="#3A59D1" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                     CornerRadius="5" 
                     
                     BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B5FCCD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BotonRedondoRegister" TargetType="Button">
            <Setter Property="Background" Value="#52443b" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
             CornerRadius="5" 
             
             BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B5FCCD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="textBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>



    </Window.Resources>
    <Grid>
        <!-- Fondo de la ventana -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="LightBlue" Offset="0"/>
                    <!-- Azul translúcido -->
                    <GradientStop Color="#3D90D7"
                           Offset="1"/>
                    <!-- Morado translúcido -->
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image Source="/images/background.jpg"
            Stretch="Fill"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
            Opacity="0.45"/>

        <!-- Contenedor central que ajusta el Canvas -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Cambio principal: Hacer el Border y su contenido responsive -->
            <Border VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" 
       BorderBrush="Black" MinHeight="343" MinWidth="241">
                <Border.Background>
                    <SolidColorBrush Color="White" Opacity="0.81"/>
                </Border.Background>
                <Viewbox StretchDirection="Both" Stretch="Uniform">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="240" >
                        <Image Height="120" Width="120" Source="/images/logo.png" Panel.ZIndex="1" Margin="10"/>
                        <Label Content="Nombre de usuario:" Canvas.Left="340" Canvas.Top="181" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" FontFamily="Yu Gothic UI Semibold"  />
                        <TextBox x:Name="txtBoxLogin" Style="{StaticResource textBox}" Canvas.Left="340" TextWrapping="Wrap" Canvas.Top="212" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Yu Gothic UI Light" Background="Transparent" BorderBrush="#1b763b" Opacity="0.6" Text="{Binding Usuario.Nombre}"/>
                        <Label Content="Contraseña:" Canvas.Left="340" Canvas.Top="230" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" FontFamily="Yu Gothic UI Semibold"/>
                        <!--<PasswordBox x:Name="txtBoxPassword"
                                     Background="Transparent" BorderBrush="#1b763b"
                                     BorderThickness="0, 0, 0, 1"
                                     Canvas.Left="340"
                                     Canvas.Top="261"
                                     Width="120"
                                     Opacity="0.6"        
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Top"
                                     PasswordChanged="PasswordBox_PasswordChanged" /> -->

                        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                            <Button Content="Iniciar sesión" Style="{StaticResource BotonRedondoLogin}"  Canvas.Left="340" Canvas.Top="289" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Height="22" FontSize="7" FontFamily="Yu Gothic UI Semibold"  />
                            <Button Content="Registrar cuenta" Style="{StaticResource BotonRedondoRegister}"  Canvas.Left="400" Canvas.Top="289" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="58" FontSize="7" FontFamily="Yu Gothic UI Semibold" />
                        </StackPanel>
                        <Button x:Name="recuperarContraseña" Content="¿Has olvidado tu contraseña?" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" FontSize="8"  FontFamily="Yu Gothic UI Semibold" Visibility="Hidden"/>
                        <Label Content="¿Has olvidado tu contraseña?" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8" FontWeight="Bold" Foreground="#9AA6B2" FontFamily="Yu Gothic UI Semibold" />
                        <Label x:Name="errorInicioSesion" Content="" Canvas.Left="381" Canvas.Top="25" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Viewbox>
            </Border>

        </Grid>
    </Grid>
</Window>
